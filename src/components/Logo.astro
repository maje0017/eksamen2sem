---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  
    <a href="/" class="logo">
        <span class="logo-text">LOVEHITSHARD</span>
    </a>
</Layout>

<style>
    .logo {
        display: flex;
        align-items: center;
        text-decoration: none; 
        padding-left: 20px;
        padding-top: 10px;
        z-index: 30;
    }

    .logo-text {
        font-family: "Metal Mania", serif;
        font-size: 6.5rem; 
        font-weight: bold; 
        color: #fff; 
        letter-spacing: 4px; 
        text-transform: uppercase; 
        z-index: 30;
    }


    .logo:hover .logo-text {
        color: #fff; 
        z-index: 30;
    }

    @media screen and (max-width: 768px) {
         .logo-text{
             font-size: 2.5rem; 
        }
    }

</style>
