---

<Layout title={myData.name1}>

      <div class="container">
    <!-- Background Image -->
    <div class="gradient-overlay"></div>

    <!-- Content Section -->
    <div class="details">
        <!-- Album Art -->
        <img 
            src={`https://gpibpwcilnnywtjvpwql.supabase.co/storage/v1/object/public/lovehitshardcovers/${myData.image}`} 
            alt={myData.name1} 
            class="album-art"
        />
        
        <!-- Song Details -->
        <div class="text">
            <h2 class="song-title">{myData.name1}</h2>
            <h4 class="artist-name">lovehitshard</h4>
        </div>
    </div>

    <!-- Audio Player -->
    <audio id="audio-player" controls autoplay>
        <source 
            src={`https://gpibpwcilnnywtjvpwql.supabase.co/storage/v1/object/public/lovehitshardcovers/${myData.sound}`} 
            type="audio/mpeg" 
        />
      
