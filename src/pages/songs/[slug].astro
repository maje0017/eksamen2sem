    <script>
        document.addEventListener('keydown', (event) => {
            // Check if the key pressed is the spacebar
            if (event.code === 'Space') {
                event.preventDefault(); // Prevent default spacebar scroll behavior
                const audio = document.getElementById('audio-player');
                if (audio) {
                    if (audio.paused) {
                        audio.play(); // Play the audio if paused
                    } else {
                        audio.pause(); // Pause the audio if playing
                    }
                }
            }
        });
    </script>

        
</Layout>

<style>
/* General Body Styling */
body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background: blue; /* Fallback for unsupported browsers */
    height: 100vh;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Fullscreen Container */
.container {
    position: relative;
    width: 100%;
    height: 100%;
    color: white;
}

/* Background Image Styling */
.container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://gpibpwcilnnywtjvpwql.supabase.co/storage/v1/object/public/lovehitshardcovers/default-image.jpg') no-repeat center center/cover;
    filter: blur(20px) brightness(0.5); /* Blur and dim for Spotify effect */
    z-index: -1;
}

/* Album Art, Song Title, and Artist Container */
.details {
    position: absolute;
    bottom: 150px; /* Adjusted for spacing */
    left: 50px;
    display: flex;
    align-items: center;
    gap: 20px;
    width: 80%; /* Ensure content doesn't overflow */
}

/* Album Art */
.album-art {
    width: 150px;
    height: 150px;
    border-radius: 5px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
}

/* Text Details (Song Title and Artist) */
.text {
    display: flex;
    flex-direction: column;
    padding-top: 90px;
}

.song-title {
    font-size: 2rem;
    font-weight: bold;
    margin: 0;
}

.artist-name {
    font-size: 1.2rem;
    color: #aaa;
    margin: 5px 0 0;
}

/* Audio Controls */
audio {
    position: absolute;
    bottom: 20px; /* Adjusted for spacing */
    left: 20px;
    width: 90%; /* Full width with some padding */
    max-width: 800px; /* Limit width for larger screens */
    background: #222;
    border-radius: 5px;
    z-index: 1;
}



.icons {
    position: absolute;
    top: 20px;
    right: 20px;
    display: flex;
    flex-direction: column; /* Arrange icons vertically */
    align-items: center; /* Center align each icon */
    gap: 15px; /* Spacing between icons */
    z-index: 2;
}

.icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    transition: background 0.3s;
}

.icon:hover {
    background: rgba(255, 255, 255, 0.3);
    cursor: pointer;
}

.icon svg {
    width: 24px;
    height: 24px;
    fill: white;
}


</style>